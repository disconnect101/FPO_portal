<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/meetingHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/organizerLogo"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textViewOrganizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:text="Organiser"
                    android:textSize="30sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewAboutTheEvent"
            android:layout_below="@+id/meetingHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_the_event"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/linearLayoutDateTime"
            android:layout_below="@+id/textViewAboutTheEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_time" />

            <TextView
                android:id="@+id/textViewDateTime"
                android:layout_marginLeft="5dp"
                android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutVenue"
            android:layout_below="@+id/linearLayoutDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2.5dp">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_location"/>

            <TextView
                android:id="@+id/textViewVenue"
                android:layout_marginLeft="5dp"
                android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutAgenda"
            android:layout_below="@+id/linearLayoutVenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2.5dp">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_plans"/>

            <TextView
                android:id="@+id/textViewAgenda"
                android:layout_marginLeft="5dp"
                android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_below="@+id/linearLayoutAgenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/buttonAcceptMeeting"
            android:layout_below="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/green"
            android:text="@string/accept"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>